<div class="main">
    <header class="page_title">
    <h1>
	<%if @category=="recent"%>
	    Latest 25 Items
	<% else %>
	    Clothing > Men's > <%=@category.titleize%>
	<%end%>
  </header>

  <article class="products_list">
    <% @items.map do |i| %>
      <div class="products_list_img">
	  <a href="/products/show/<%=i.id%>">
	      <%= image_tag("#{i.id}/0.jpg")%>
          </a>
       <div class="products_list_desc">
          <br />
          <br />
          <%=i.product_brand.upcase unless i.product_brand.nil?%>
          <br />
          <b><%=i.product_description.titleize unless i.product_description.nil?%> - <%=i.product_size%></b>
          <br />
          <%=number_to_currency(i.retail_price, :unit => "$", :precision => 0)%>
        </div>
      </div>
      <%end%>
  </article>
</div>
