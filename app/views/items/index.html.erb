<h1>Listing items</h1>
<%= form_tag items_path, :method => 'get' do %>
    <p>
    <%= text_field_tag params[:id] %>
    <%= submit_tag "search", :name => nil %>
<% end %>
<table>
    <tr>
    <th>ID</th>
    <th>Name</th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
    <tr>
    <td><%= item.id %></td>
    <td><%= item.name %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Item', new_item_path %>
