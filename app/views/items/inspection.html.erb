
<h1>Item Inspection</h1>

<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="field">
    <%= f.label "Item Name" %><br />
    <%= @item.name %>
</div>
<div class="field">
    <%= f.label "Condition (1 to 5)" %><br />
    <%= f.text_field :condition %>
</div>
<div class="field">
    <%= f.label "Notes" %><br />
    <%= f.text_area :notes %>
</div>
    <%= f.submit %>
  </div>
<% end %>

